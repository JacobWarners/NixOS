// wlogout/layout.json
[
  {
    "label": "Lock",
    "action": "swaylock-effects",
    "text": "Lock",
    "keybind": "l"
  },
  {
    "label": "Logout",
    "action": "hyprctl dispatch exit",
    "text": "Logout",
    "keybind": "e"
  },
  {
    "label": "Suspend",
    "action": "systemctl suspend",
    "text": "Suspend",
    "keybind": "s"
  },
  {
    "label": "Hibernate",
    "action": "systemctl hibernate",
    "text": "Hibernate",
    "keybind": "h"
  },
  {
    "label": "Shutdown",
    "action": "systemctl poweroff",
    "text": "Shutdown",
    "keybind": "p"
  },
  {
    "label": "Reboot",
    "action": "systemctl reboot",
    "text": "Reboot",
    "keybind": "r"
  }
]
